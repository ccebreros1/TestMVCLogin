@{
    //If the user is an admin, the user will have the ability to view the full menu
    if (!this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    //If the user is just a member, a volunteer, or public, the user will see the general menu
    else
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}