@model  TestMVCLogin.Models.GroupedUserViewModel
@{
    ViewBag.Title = "Unregistered Users";
}

<h1>UnregisteredUsers</h1>

<div class="row">
    <h2>Unregistered Users</h2>
    <table style=" background-color:#FFFFFF; border: 3px #6D7B8D; padding: 5px;width: 99%;table-layout:fixed;" cellpadding="6" cellspacing="6">
        @using (Html.BeginForm())
        {
            foreach (var item in Model.Users)
            {
                <tr>
                    <td style="width:100%; border:dotted 1px;">
                        @item.Username
                    </td>
                    <td style="width:100%; border:dotted 1px;">
                        @item.Email
                    </td>
                    <td style="width:100%; border:dotted 1px;">
                        @Html.ActionLink("Approve User", "approveUser",
                   new { userName = item.Username },
                   new
                   {
                       onclick =
                   "return confirm('Are you sure you want to register this user?');"
                   })
                    </td>
                </tr>
            }
        }
    </table>

</div>